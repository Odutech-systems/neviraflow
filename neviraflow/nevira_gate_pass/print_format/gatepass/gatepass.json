 "html": "<style>\r\n    body {\r\n        font-family: Arial, sans-serif;\r\n        font-size: 12px;\r\n        margin: 0;\r\n        padding: 20px;\r\n    }\r\n    .print-container {\r\n        border: 1px solid #000;\r\n        padding: 10px;\r\n        width: 100%;\r\n        box-sizing: border-box;\r\n    }\r\n    .header {\r\n        text-align: center;\r\n        margin-bottom: 10px;\r\n    }\r\n    .header h3 {\r\n        margin: 0;\r\n    }\r\n    .header p {\r\n        margin: 0;\r\n        font-size: 10px;\r\n    }\r\n    .ticket-details, .vehicle-details, .weight-details, .verification-details, .customer-info {\r\n        border-top: 1px dashed #000;\r\n        padding-top: 5px;\r\n        margin-top: 5px;\r\n    }\r\n    .section-title {\r\n        text-align: center;\r\n        font-weight: bold;\r\n        margin: 5px 0;\r\n    }\r\n    .details-row {\r\n        display: flex;\r\n        justify-content: space-between;\r\n        margin-bottom: 5px;\r\n    }\r\n    .details-row div {\r\n        flex: 1;\r\n    }\r\n    .details-row div:last-child {\r\n        text-align: right;\r\n    }\r\n    .table-container {\r\n        margin-top: 10px;\r\n    }\r\n    .customer-info table {\r\n        width: 100%;\r\n        border-collapse: collapse;\r\n    }\r\n    .customer-info th, .customer-info td {\r\n        border: 1px solid #000;\r\n        padding: 5px;\r\n        text-align: left;\r\n    }\r\n    .footer {\r\n        text-align: center;\r\n        margin-top: 20px;\r\n        font-size: 10px;\r\n    }\r\n</style>\r\n\r\n<div class=\"print-container\">\r\n    <div class=\"header\">\r\n  \r\n    <img src=\"/files/logo-dark.png\" class=\"logo\" alt=\"Company Logo\">\r\n    <div class=\"company-name\">NEVIRA MINERALS LIMITED</div>\r\n    <div class=\"tagline\">PROCESSORS OF INDUSTRIAL MINERALS AND FILLERS, <br> TERRAZZO, AGRICULTURAL & ANIMAL FEED LIME</div>\r\n    <div class=\"contact-info\">\r\n      ORIENTAL GODOWNS, ATHI RIVER, KENYA<br>\r\n      ADDRESS: P.O BOX 26647 \u2013 00100 GPO<br>\r\n      EMAIL: sales@neviraminerals.com | +254 793 562 441 / +254 700 113 116\r\n  </div>\r\n    </div>\r\n<div class=\"ticket-details\">\r\n    <div class=\"section-title\">GATE PASS DETAILS</div>\r\n    <table style=\"width: 100%; border-collapse: collapse;\">\r\n        <tr>\r\n            <td style=\"width: 33.3%;\">\r\n                <div class=\"detail-label\">Gate Pass ID:</div>\r\n                <div class=\"detail-value\">{{ doc.name }}</div>\r\n            </td>\r\n            <td style=\"width: 33.3%;\">\r\n                <div class=\"detail-label\">Date:</div>\r\n                <div class=\"detail-value\">{{ frappe.utils.formatdate(doc.date) }}</div>\r\n            </td>\r\n            <td style=\"width: 33.3%;\">\r\n                <div class=\"detail-label\">Created by:</div>\r\n                \r\n               \r\n                <div class=\"detail-value\">{{ frappe.get_doc(\"User\", doc.dispatch_representative).full_name or 'NA' }}</div>\r\n\r\n     </td>\r\n            </td>\r\n        </tr>\r\n        <tr>\r\n            <td style=\"width: 33.3%;\">\r\n                <div class=\"detail-label\">Gate Pass Status:</div>\r\n                <div class=\"detail-value\">{{ doc.gate_pass_status }}</div>\r\n            </td>\r\n\r\n            <td style=\"width: 33.3%;\">\r\n                <div class=\"detail-label\">Delivery Note:</div>\r\n                <div class=\"detail-value\">{{ doc.delivery_remarks or 'N/A' }}</div>\r\n            </td>\r\n                        <td style=\"width: 33.3%;\">\r\n                <div class=\"detail-label\"> For Customer</div>\r\n                <div class=\"detail-value\">{{ frappe.get_doc(\"Customer\", doc.customer_name).customer_name if doc.customer_name else 'NA' }}</div>\r\n            </td>\r\n        </tr>\r\n    </table>\r\n</div>\r\n\r\n<style>\r\n/* Add to your existing style block */\r\n.detail-label {\r\n    font-weight: bold;\r\n    font-size: 11px;\r\n    margin-bottom: 2px;\r\n}\r\n.detail-value {\r\n    font-size: 12px;\r\n}\r\n</style>\r\n\r\n    <div class=\"vehicle-details\">\r\n        <div class=\"section-title\">VEHICLE & DRIVER</div>\r\n        <div class=\"details-row\">\r\n            <div>Vehicle No: {{ doc.vehicle_registration_number or doc.vehicle_no }}</div>\r\n            <div>Driver name: {{ doc.driver_name }}</div>\r\n        </div>\r\n    </div>\r\n\r\n   \r\n\r\n    {% if doc.get(\"items\") %}\r\n    <div class=\"customer-info\">\r\n        <div class=\"section-title\">CUSTOMER INFORMATION</div>\r\n        <table>\r\n            <thead>\r\n                <tr>\r\n                    <th style=\"width: 25%;\">CUSTOMER NAME</th>\r\n                    <th style=\"width: 35%;\">ITEM DESCRIPTION</th>\r\n                    <th style=\"width: 20%;\">QUANTITY</th>\r\n                    <th style=\"width: 20%;\">UOM</th>\r\n                </tr>\r\n            </thead>\r\n            <tbody>\r\n                {% for item in doc.items %}\r\n                <tr>\r\n                    <td>{{ doc.customer_name or 'N/A' }}</td>\r\n                    <td>{{ item.item_name }}</td>\r\n                    <td>{{ item.qty }}</td>\r\n                    <td>{{ item.uom }}</td>\r\n                </tr>\r\n                {% endfor %}\r\n            </tbody>\r\n        </table>\r\n    </div>\r\n    {% endif %}\r\n<div class=\"verification-details\">\r\n    <div class=\"section-title\">VERIFICATION</div>\r\n    <div class=\"details-row\">\r\n        <div>Date: {{ frappe.utils.formatdate(doc.creation) }}</div>\r\n        <div>Time: {{ frappe.utils.format_time(doc.creation, \"HH:mm:ss\") }}</div>\r\n    </div>\r\n    \r\n    <div style=\"border: 1px dashed #000; padding: 10px; margin-top: 10px;\">\r\n        <table style=\"width: 100%; border-collapse: collapse;\">\r\n            <tr>\r\n                <td style=\"padding: 5px; width: 50%; vertical-align: top;\">\r\n                    <p style=\"margin: 0; font-weight: bold;\">Security Officer Name:</p>\r\n                    <p style=\"margin: 0; height: 50px; width: 150px;  border-bottom: 1px dotted #000;\">{{ doc.security_officer_name or '' }}</p>\r\n                </td>\r\n                <td style=\"padding: 5px; width: 50%; vertical-align: top; text-align: right;\">\r\n                    <p style=\"margin: 0; font-weight: bold;\">Signature:</p>\r\n                    {% if doc.security_officer_signature %}\r\n                        <img src=\"{{ doc.security_officer_signature }}\" style=\"max-width: 150px; border-bottom: 1px dotted #000; display: block; margin-left: auto;\">\r\n                    {% else %}\r\n                        <div style=\"height: 50px; width: 150px; margin-left: auto; border-bottom: 1px dotted #000;\"></div>\r\n                    {% endif %}\r\n                </td>\r\n            </tr>\r\n        </table>\r\n    </div>\r\n</div>\r\n</div>",
